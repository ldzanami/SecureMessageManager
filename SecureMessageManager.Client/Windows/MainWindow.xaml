<Window x:Class="SecureMessageManager.Client.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Username:"/>
        <TextBox x:Name="UsernameBox" Margin="0,5"/>

        <TextBlock Text="Password:"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,5"/>

        <Button Content="Login" Click="LoginButton_Click" Margin="0,10"/>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBox x:Name="ResultBox" TextWrapping="Wrap" AcceptsReturn="True"/>
        </ScrollViewer>
        
    </StackPanel>
</Window>
